{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Points and Paths Schema",
  "description": "Schema for representing 3D points and paths with metadata",
  "definitions": {
    "Point": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" },
        "size": {
          "type": "number",
          "default": 1.0,
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "name": {
          "type": ["string", "null"],
          "description": "Optional name. If null, will be auto-generated as 'Point(x,y,z)'"
        }
      },
      "required": ["x", "y", "z"],
      "additionalProperties": false
    },
    "Path": {
      "type": "object",
      "properties": {
        "points": {
          "type": "array",
          "items": { "$ref": "#/definitions/Point" },
          "minItems": 1
        },
        "name": {
          "type": ["string", "null"],
          "description": "Optional name. If null, will be auto-generated as 'Path-{N}pts'"
        },
        "color": {
          "type": "string",
          "default": "#0000FF",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "thickness": {
          "type": "number",
          "default": 1.0,
          "minimum": 0,
          "exclusiveMinimum": true
        }
      },
      "required": ["points"],
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "points": {
          "type": "array",
          "items": { "$ref": "#/definitions/Point" }
        },
        "paths": {
          "type": "array",
          "items": { "$ref": "#/definitions/Path" }
        }
      },
      "minProperties": 1
    },
    {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/Point" },
          { "$ref": "#/definitions/Path" }
        ]
      }
    },
    {
      "$ref": "#/definitions/Path"
    }
  ]
}
